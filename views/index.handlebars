<h1>Eat Da Burger!</h1>

<ul>
    {{#each burgers}}
    <li>
        <p>
            {{this.id}}. {{this.burger_name}}
            <button data-burgerid="{{this.id}}" class="devour-burger">Devour!!</button>
        </p>
    </li>
    {{/each}}
</ul>

<form id="addburger" class="create-form">
    <textarea type="text" id="yourburger" name="burger"></textarea>
    <button type="submit">Add Dat Borger!!</button>
</form>
<h2>What Burger do you want to eat?!</h2>