<div class="container">
    <div class="row">
        <div class="col-sm text-center">
            <img src="/assets/img/burgerpic.jpg" width="350" height="350" alt="burgerpic" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm text-center">
            <h1>Eat Da Burger!</h1>


        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <h3>Your Order</h3>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burger/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-6">
            <h3>You've Eaten this!</h3>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burger/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm text-center">
            <h2>What Burger do you want to eat?!</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm text-center">
            <form id="addburger" class="create-form">
                <textarea type="text" id="yourburger" name="burger"></textarea>
                <button type="submit" class="devour-burger btn btn-info">Add Dat Borger!!</button>
            </form>
        </div>
    </div>

</div>